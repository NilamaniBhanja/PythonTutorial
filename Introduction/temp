            obj.IsEngineCoverApplicable = true;
            CheckApplicability(item, obj, "EngineCover");
        }

        public void GAPConfig(addonCoverDtls item, DomQuickQuote obj)
        {
            obj.DefaultPerGAP = Convert.ToDecimal(item.addonCoverRate1);
