using System.Collections.Generic;
using System.Xml.Serialization;

[XmlRoot("Root")]
public class Root
{
    [XmlAttribute("Code")]
    public string Code { get; set; }

    [XmlAttribute("Name")]
    public string Name { get; set; }

    [XmlElement("ProposalDetails")]
    public ProposalDetails ProposalDetails { get; set; }
}

public class ProposalDetails
{
    [XmlElement("RiskDetails")]
    public RiskDetails RiskDetails { get; set; }

    [XmlElement("GeneralProposalInformation")]
    public GeneralProposalInformation GeneralProposalInformation { get; set; }

    [XmlArray("ClauseDetails")]
    [XmlArrayItem("ClauseDetails")]
    public List<ClauseDetail> ClauseDetails { get; set; }

    [XmlArray("WarrantyDetails")]
    [XmlArrayItem("WarrantyDetails")]
    public List<WarrantyDetail> WarrantyDetails { get; set; }
}

public class RiskDetails
{
    [XmlElement("Block")]
    public Block Block { get; set; }
}

public class Block
{
    // Simple properties
    [XmlElement("PropRisks_AdmittedNonAdmittedLocation")]
    public XmlProperty PropRisks_AdmittedNonAdmittedLocation { get; set; }
    
    [XmlElement("PropRisks_AreaLocality")]
    public XmlProperty PropRisks_AreaLocality { get; set; }
    
    [XmlElement("PropRisks_Country1")]
    public XmlProperty PropRisks_Country1 { get; set; }
    
    // Additional properties would be added here following the same pattern
    // Only showing a few for brevity
    
    [XmlElement("OtherDetailsGrid")]
    public OtherDetailsGrid OtherDetailsGrid { get; set; }
    
    [XmlElement("RiskCoverDetailsGrid")]
    public RiskCoverDetailsGrid RiskCoverDetailsGrid { get; set; }
}

public class XmlProperty
{
    [XmlAttribute("Type")]
    public string Type { get; set; }

    [XmlAttribute("Value")]
    public string Value { get; set; }
}

public class OtherDetailsGrid
{
    [XmlElement("BPSooksmaFireSectionSI")]
    public GroupItem<BPSooksmaFireSectionSI> BPSooksmaFireSectionSI { get; set; }
    
    [XmlElement("SectionIAddonNonTerrorismCover")]
    public GroupItem<SectionIAddonNonTerrorismCover> SectionIAddonNonTerrorismCover { get; set; }
    
    [XmlElement("PropRiskCol")]
    public GroupItem<PropRiskCol> PropRiskCol { get; set; }
}

public class GroupItem<T>
{
    [XmlAttribute("Name")]
    public string Name { get; set; }
    
    [XmlAttribute("Value")]
    public string Value { get; set; }
    
    [XmlElement(ElementName = "Value")]
    public T Data { get; set; }
}

public class BPSooksmaFireSectionSI
{
    [XmlElement("ItemType")]
    public XmlProperty ItemType { get; set; }
    
    [XmlElement("Description")]
    public XmlProperty Description { get; set; }
    
    [XmlElement("SumInsured")]
    public XmlProperty SumInsured { get; set; }
}

public class SectionIAddonNonTerrorismCover
{
    [XmlElement("CoverGroups")]
    public XmlProperty CoverGroups { get; set; }
    
    [XmlElement("Description")]
    public XmlProperty Description { get; set; }
    
    [XmlElement("SumInsured")]
    public XmlProperty SumInsured { get; set; }
    
    [XmlElement("Rate")]
    public XmlProperty Rate { get; set; }
    
    [XmlElement("Premium")]
    public XmlProperty Premium { get; set; }
}

public class PropRiskCol
{
    [XmlElement("IsOptionalCover")]
    public XmlProperty IsOptionalCover { get; set; }
    
    [XmlElement("PropRisks_DifferentialSI")]
    public XmlProperty PropRisks_DifferentialSI { get; set; }
    
    // Additional properties would follow the same pattern
}

public class RiskCoverDetailsGrid
{
    [XmlElement("RiskGroup")]
    public RiskGroup RiskGroup { get; set; }
}

public class RiskGroup
{
    [XmlAttribute("Name")]
    public string Name { get; set; }
    
    [XmlAttribute("Value")]
    public string Value { get; set; }
    
    [XmlAttribute("Type")]
    public string Type { get; set; }
    
    [XmlElement("CoverSIComponant")]
    public List<CoverSIComponant> CoverSIComponants { get; set; }
}

public class CoverSIComponant
{
    [XmlAttribute("Name")]
    public string Name { get; set; }
    
    [XmlAttribute("Value")]
    public string Value { get; set; }
    
    [XmlElement("PropCoverDetails_Applicable")]
    public XmlProperty Applicable { get; set; }
    
    [XmlElement("PropCoverDetails_CoverGroups")]
    public XmlProperty CoverGroups { get; set; }
    
    // Additional properties would follow the same pattern
}

public class GeneralProposalInformation
{
    [XmlElement("ErrorTrackingNeeded")]
    public XmlProperty ErrorTrackingNeeded { get; set; }
    
    [XmlElement("ProductType")]
    public XmlProperty ProductType { get; set; }
    
    [XmlElement("PropBranchDetails_IMDBranchCode")]
    public XmlProperty PropBranchDetails_IMDBranchCode { get; set; }
    
    // Additional properties would follow the same pattern
}

public class ClauseDetail
{
    [XmlAttribute("Type")]
    public string Type { get; set; }
    
    [XmlElement("PropClauseDetails_ClauseCode_Mandatary")]
    public XmlProperty ClauseCode { get; set; }
    
    [XmlElement("PropClauseDetails_ClauseNumber_Mandatary")]
    public XmlProperty ClauseNumber { get; set; }
    
    [XmlElement("PropClauseDetails_ClauseShortDescription")]
    public XmlProperty ClauseShortDescription { get; set; }
    
    // Additional properties would follow the same pattern
}

public class WarrantyDetail
{
    [XmlAttribute("Type")]
    public string Type { get; set; }
    
    [XmlElement("PropWarranty_Default_Val")]
    public XmlProperty DefaultVal { get; set; }
    
    [XmlElement("PropWarranty_IsDataDeleted")]
    public XmlProperty IsDataDeleted { get; set; }
    
    [XmlElement("PropWarranty_WarrantyCode")]
    public XmlProperty WarrantyCode { get; set; }
    
    // Additional properties would follow the same pattern
}
