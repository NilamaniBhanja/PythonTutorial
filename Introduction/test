SELECT 
    a.id,
    a.col1 AS A_col1, b.col1 AS B_col1,
    a.col2 AS A_col2, b.col2 AS B_col2,
    a.col3 AS A_col3, b.col3 AS B_col3
FROM TableA a
FULL OUTER JOIN TableB b 
    ON a.id = b.id
WHERE 
    a.col1 <> b.col1
    OR a.col2 <> b.col2
    OR a.col3 <> b.col3
    OR a.id IS NULL
    OR b.id IS NULL;
