private bool CheckYear5Applicability(addonCoverDtls item, bool isValueBased)
{
    if (item.statusDecline5 == "Y")
    {
        return false;
    }

    if (isValueBased)
    {
        return CheckYear5ValueApplicability(item);
    }
    else
    {
        return CheckYear5RateApplicability(item);
    }
}

private bool CheckYear5ValueApplicability(addonCoverDtls item)
{
    return item.addonCoverValue1 != 0 && 
           item.addonCoverValue2 != 0 && 
           item.addonCoverValue3 != 0 && 
           item.addonCoverValue4 != 0 && 
           item.addonCoverValue5 != 0;
}

private bool CheckYear5RateApplicability(addonCoverDtls item)
{
    return item.addonCoverRate1 != 0 && 
           item.addonCoverRate2 != 0 && 
           item.addonCoverRate3 != 0 && 
           item.addonCoverRate4 != 0 && 
           item.addonCoverRate5 != 0;
}
