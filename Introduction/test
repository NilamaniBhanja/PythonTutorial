private static bool IsPrivateIp(IPAddress ip)
{
    var bytes = ip.GetAddressBytes();

    return Is10(bytes)
        || Is172(bytes)
        || Is192(bytes)
        || IsLoopback(bytes)
        || IsLinkLocal(bytes);
}

private static bool Is10(byte[] b) => b[0] == 10;
private static bool Is172(byte[] b) => b[0] == 172 && b[1] >= 16 && b[1] <= 31;
private static bool Is192(byte[] b) => b[0] == 192 && b[1] == 168;
private static bool IsLoopback(byte[] b) => b[0] == 127;
private static bool IsLinkLocal(byte[] b) => b[0] == 169 && b[1] == 254;
